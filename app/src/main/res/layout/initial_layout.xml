<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    tools:background="@color/background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_initial_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="@string/text_initial_title"
        android:fontFamily="@font/plusjakarta_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_desc_music"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/plusjakarta_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_initial_music"
        android:textAlignment="center"
        android:text="@string/text_initial_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_music"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/initial_vector"
        android:layout_width="250dp"
        android:layout_height="200dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>