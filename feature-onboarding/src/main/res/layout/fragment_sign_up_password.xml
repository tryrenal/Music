<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup_password.SignUpPasswordFragment">

    <com.redveloper.core_ui.components.RedveloperAppBar
        android:id="@+id/appbar"
        app:label="Create account"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.redveloper.core_ui.components.input.RedveloperInput
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:id="@+id/et_password"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:label="Create a password"
        app:hint="use atleast 8 characters"
        app:inputType="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.redveloper.core_ui.components.RedveloperButton
        android:id="@+id/btn_next"
        app:label="Next"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:layout_width="82dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>