<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment">

    <include layout="@layout/bg_cover_layout"/>

    <ImageView
        android:id="@+id/img_logo"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        android:src="@drawable/ic_spotify"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:textSize="28dp"
        android:lineHeight="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:text="Milions of Songs.\n Free on Spotify."
        android:fontFamily="@font/plusjakarta_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.redveloper.core_ui.components.RedveloperButton
        android:id="@+id/btn_sign_up"
        app:label="Sign up free"
        app:btnStyle="primary"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@id/btn_login_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.redveloper.core_ui.components.RedveloperButton
        android:id="@+id/btn_login_google"
        app:label="Continue with Google"
        app:btnStyle="secondary"
        app:icon="@drawable/ic_google"
        android:layout_marginBottom="14dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.redveloper.core_ui.components.RedveloperButton
        android:id="@+id/btn_login_facebook"
        app:label="Continue with Facebook"
        app:btnStyle="secondary"
        app:icon="@drawable/ic_facebook"
        android:layout_marginBottom="14dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_login_apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.redveloper.core_ui.components.RedveloperButton
        android:id="@+id/btn_login_apple"
        app:label="Continue with Apple"
        app:btnStyle="secondary"
        app:icon="@drawable/ic_apple"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="20dp"
        app:iconColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_login"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:text="Log in"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/plusjakarta_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>